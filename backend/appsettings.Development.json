{
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=RunnersDb.db"
    },

    "Jwt": {
        "SecretKey": "dev-secret-key-for-jwt-token-generation-change-in-production",
        "Issuer": "241RunnersAwareness",
        "Audience": "241RunnersAwareness",
        "ExpiryInMinutes": 60,
        "RefreshTokenExpiryInDays": 30
    },

    "Cors": {
        "AllowedOrigins": [
            "http://localhost:5173",
            "http://localhost:8888",
            "https://241runnersawareness.org",
            "https://www.241runnersawareness.org"
        ]
    },

    "Google": {
        "ClientId": "dev-google-client-id",
        "ClientSecret": "dev-google-client-secret"
    },

    "App": {
        "BaseUrl": "http://localhost:5173",
        "ApiUrl": "http://localhost:5000",
        "Environment": "Development",
        "Version": "1.0.0"
    },

    "RateLimiting": {
        "PermitLimit": 100,
        "Window": "00:01:00",
        "SegmentsPerWindow": 10
    },

    "HealthChecks": {
        "MemoryThreshold": 1024
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Information"
        }
    },

    "AllowedHosts": "*"
}
