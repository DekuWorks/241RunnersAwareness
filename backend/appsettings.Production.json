{
    "ConnectionStrings": {
        "DefaultConnection": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=true;"
    },

    "Jwt": {
        "SecretKey": "${JWT_SECRET_KEY}",
        "Issuer": "241RunnersAwareness",
        "Audience": "241RunnersAwareness",
        "ExpiryInMinutes": 60,
        "RefreshTokenExpiryInDays": 30
    },

    "Email": {
        "ApiKey": "${SENDGRID_API_KEY}",
        "FromEmail": "noreply@241runnersawareness.org",
        "FromName": "241 Runners Awareness"
    },

    "Sms": {
        "AuthToken": "${TWILIO_AUTH_TOKEN}",
        "AccountSid": "${TWILIO_ACCOUNT_SID}",
        "FromNumber": "${TWILIO_FROM_NUMBER}"
    },

    "Google": {
        "ClientId": "${GOOGLE_CLIENT_ID}",
        "ClientSecret": "${GOOGLE_CLIENT_SECRET}"
    },

    "App": {
        "BaseUrl": "https://241runnersawareness.org",
        "ApiUrl": "https://api.241runnersawareness.org",
        "Environment": "Production"
    },

    "Cors": {
        "AllowedOrigins": [
            "https://241runnersawareness.org",
            "https://www.241runnersawareness.org",
            "https://app.241runnersawareness.org"
        ]
    },

    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "AllowedHosts": "*"
}
