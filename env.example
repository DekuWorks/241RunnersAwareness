# 241 Runners Awareness - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DefaultConnection="Server=tcp:your-sql-server.database.windows.net,1433;Initial Catalog=YourDatabase;Persist Security Info=False;User ID=your-username;Password=your-secure-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"

# JWT Configuration
JWT_KEY="your-super-secure-jwt-key-that-is-at-least-32-characters-long-and-random"
JWT_ISSUER="241RunnersAwareness"
JWT_AUDIENCE="241RunnersAwareness"

# API Configuration
API_BASE_URL="https://your-api-domain.azurewebsites.net/api"

# Image Upload Configuration
ImageUpload__Path="wwwroot/uploads"
ImageUpload__BaseUrl="/uploads"
ImageUpload__MaxSizeMB=10
ImageUpload__AllowedExtensions="jpg,jpeg,png,gif,webp"

# CORS Configuration
CORS__AllowedOrigins__0="https://241runnersawareness.org"
CORS__AllowedOrigins__1="https://www.241runnersawareness.org"

# Application Settings
ASPNETCORE_ENVIRONMENT="Production"
ASPNETCORE_URLS="https://+:443;http://+:80"

# Logging Configuration
Logging__LogLevel__Default="Information"
Logging__LogLevel__Microsoft.AspNetCore="Warning"

# Security Settings
AllowedHosts="*"