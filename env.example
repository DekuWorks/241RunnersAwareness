# ============================================
# 241 RUNNERS AWARENESS - ENVIRONMENT CONFIGURATION
# ============================================
# 
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_SERVER=tcp:your-sql-server.database.windows.net,1433
DATABASE_NAME=YourDatabaseName
DATABASE_USER=your-database-username
DATABASE_PASSWORD=your-secure-database-password

# Full connection string (alternative format)
# DefaultConnection="Server=tcp:your-sql-server.database.windows.net,1433;Initial Catalog=YourDatabase;Persist Security Info=False;User ID=your-username;Password=your-secure-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_KEY=your-super-secure-jwt-key-that-is-at-least-32-characters-long-and-random
JWT_ISSUER=241RunnersAwareness
JWT_AUDIENCE=241RunnersAwareness
JWT_EXPIRY_MINUTES=60

# ============================================
# API CONFIGURATION
# ============================================
API_BASE_URL=https://your-api-domain.azurewebsites.net
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=https://241runnersawareness.org
FRONTEND_HTTPS_URL=https://www.241runnersawareness.org

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ALLOWED_ORIGINS=https://241runnersawareness.org,https://www.241runnersawareness.org
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-CSRF-Token,X-Client

# ============================================
# APPLICATION SETTINGS
# ============================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://+:443;http://+:80
ALLOWED_HOSTS=*

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL_DEFAULT=Information
LOG_LEVEL_MICROSOFT_ASPNETCORE=Warning
LOG_LEVEL_MICROSOFT_ENTITYFRAMEWORK=Warning

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_PATH=wwwroot/uploads
UPLOAD_BASE_URL=/uploads
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@241runnersawareness.org
SMTP_FROM_NAME=241 Runners Awareness

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================
# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-application-insights-key

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ============================================
# SECURITY SETTINGS
# ============================================
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Session settings
SESSION_TIMEOUT_MINUTES=15
SESSION_ABSOLUTE_TIMEOUT_MINUTES=60

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL_CHAR=true

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# NamUs API (if using external data source)
NAMUS_API_URL=https://api.namus.gov
NAMUS_API_KEY=your-namus-api-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Only use in development
# DEBUG_MODE=true
# ENABLE_SWAGGER_UI=true
# ENABLE_DETAILED_ERRORS=true