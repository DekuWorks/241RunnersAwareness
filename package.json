{
  "name": "241runnersawareness",
  "version": "2.0.0",
  "description": "241 Runners Awareness - Missing Persons Case Management System",
  "scripts": {
    "build": "node scripts/build.js",
    "test:e2e": "node scripts/e2e-smoke-test.js",
    "test:e2e:ci": "node scripts/e2e-smoke-test.js --ci",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint:css": "csslint \"**/*.css\"",
    "lint": "npm run lint:html && npm run lint:js && npm run lint:css",
    "deploy": "npm run build && npm run test:e2e",
    "smoke-test": "npm run test:e2e"
  },
  "devDependencies": {
    "puppeteer": "^21.0.0",
    "htmlhint": "^1.1.4",
    "eslint": "^8.0.0",
    "csslint": "^1.0.5"
  },
  "keywords": [
    "missing-persons",
    "case-management",
    "admin-dashboard",
    "real-time",
    "signalr",
    "pwa"
